@model NetCoreMVC_Otopark.Models.Arac

@{
    ViewData["Title"] = "AracGiris";
}

<h1>Araç Girişi</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AracGiris">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AracPlaka" class="control-label"></label>
                <input asp-for="AracPlaka" class="form-control" />
                <span asp-validation-for="AracPlaka" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h2 class="alert-danger" >@ViewBag.HataMesaj</h2>
            </div>
            <div class="form-group">
                <input type="submit" value="Giriş Yap" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Otoparktaki Araç Listesi</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
